---
interface Props {
	text: string;
	class?: string;
}

const { text, class: className } = Astro.props;
---

<div class:list={["glitch-wrapper", className]} data-text={text}>
    <span class="glitch-text">{text}</span>
</div>

<style>
    .glitch-wrapper {
        position: relative;
        display: inline-block;
    }

    .glitch-text {
        position: relative;
        display: inline-block;
    }

    .glitch-wrapper::before,
    .glitch-wrapper::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: transparent;
    }

    .glitch-wrapper::before {
        left: 2px;
        text-shadow: -2px 0 #ff00c1;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch-wrapper::after {
        left: -2px;
        text-shadow: -2px 0 #00fff9, 2px 2px #ff00c1;
        animation: glitch-anim2 1s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
        0% { clip: rect(31px, 9999px, 94px, 0); transform: skew(0.85deg); }
        5% { clip: rect(70px, 9999px, 71px, 0); transform: skew(0.58deg); }
        10% { clip: rect(29px, 9999px, 83px, 0); transform: skew(0.53deg); }
        15% { clip: rect(46px, 9999px, 11px, 0); transform: skew(0.48deg); }
        20% { clip: rect(3px, 9999px, 40px, 0); transform: skew(0.74deg); }
        25% { clip: rect(76px, 9999px, 97px, 0); transform: skew(0.1deg); }
        30% { clip: rect(93px, 9999px, 32px, 0); transform: skew(0.18deg); }
        35% { clip: rect(52px, 9999px, 34px, 0); transform: skew(0.2deg); }
        40% { clip: rect(48px, 9999px, 34px, 0); transform: skew(0.97deg); }
        45% { clip: rect(27px, 9999px, 49px, 0); transform: skew(0.55deg); }
        50% { clip: rect(4px, 9999px, 85px, 0); transform: skew(0.02deg); }
        55% { clip: rect(2px, 9999px, 20px, 0); transform: skew(0.21deg); }
        60% { clip: rect(75px, 9999px, 12px, 0); transform: skew(0.45deg); }
        65% { clip: rect(10px, 9999px, 39px, 0); transform: skew(0.89deg); }
        70% { clip: rect(7px, 9999px, 72px, 0); transform: skew(0.39deg); }
        75% { clip: rect(16px, 9999px, 50px, 0); transform: skew(0.35deg); }
        80% { clip: rect(90px, 9999px, 72px, 0); transform: skew(0.89deg); }
        85% { clip: rect(11px, 9999px, 41px, 0); transform: skew(0.6deg); }
        90% { clip: rect(32px, 9999px, 5px, 0); transform: skew(0.81deg); }
        95% { clip: rect(50px, 9999px, 36px, 0); transform: skew(0.77deg); }
        100% { clip: rect(97px, 9999px, 2px, 0); transform: skew(0.35deg); }
    }

    @keyframes glitch-anim2 {
        0% { clip: rect(29px, 9999px, 56px, 0); transform: skew(0.34deg); }
        5% { clip: rect(61px, 9999px, 30px, 0); transform: skew(0.25deg); }
        10% { clip: rect(94px, 9999px, 60px, 0); transform: skew(0.27deg); }
        15% { clip: rect(75px, 9999px, 95px, 0); transform: skew(0.44deg); }
        20% { clip: rect(22px, 9999px, 84px, 0); transform: skew(0.02deg); }
        25% { clip: rect(73px, 9999px, 41px, 0); transform: skew(0.53deg); }
        30% { clip: rect(37px, 9999px, 3px, 0); transform: skew(0.4deg); }
        35% { clip: rect(79px, 9999px, 81px, 0); transform: skew(0.53deg); }
        40% { clip: rect(7px, 9999px, 17px, 0); transform: skew(0.18deg); }
        45% { clip: rect(59px, 9999px, 96px, 0); transform: skew(0.59deg); }
        50% { clip: rect(31px, 9999px, 35px, 0); transform: skew(0.8deg); }
        55% { clip: rect(16px, 9999px, 89px, 0); transform: skew(0.79deg); }
        60% { clip: rect(74px, 9999px, 58px, 0); transform: skew(0.33deg); }
        65% { clip: rect(81px, 9999px, 49px, 0); transform: skew(0.01deg); }
