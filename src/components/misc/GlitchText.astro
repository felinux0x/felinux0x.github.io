        75% { clip: rect(39px, 9999px, 37px, 0); transform: skew(0.37deg); }
        80% { clip: rect(95px, 9999px, 7px, 0); transform: skew(0.96deg); }
        85% { clip: rect(63px, 9999px, 75px, 0); transform: skew(0.93deg); }
        90% { clip: rect(9px, 9999px, 53px, 0); transform: skew(0.96deg); }
        95% { clip: rect(84px, 9999px, 80px, 0); transform: skew(0.55deg); }
        100% { clip: rect(95px, 9999px, 76px, 0); transform: skew(0.79deg); }
    }
</style>
