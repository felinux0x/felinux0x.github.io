---
import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import MainGridLayout from "../../layouts/MainGridLayout.astro";

const cheatsheetPost = await getEntry("spec", "cheatsheet");

if (!cheatsheetPost) {
	throw new Error("CheatSheet page content not found");
}

const { Content } = await render(cheatsheetPost);
---
<MainGridLayout title="CheatSheet" description="Base de Conhecimento e Comandos Ãšteis">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
